{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["chrome"]
  },
  "include": ["chrome_ext/content/injectors/claude.js", "types/**/*.d.ts"],
  "exclude": ["docs/tmp"]
}
